<!-- Content Heading assignment 04 -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<%- messages() %>

<!-- Management Items Display -->
<a href="/inv/add-classification">Add New Classification</a>
<a href="/inv/add-inventory">Add New Inventory</a>

<div class="inventory-manage-container">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list</p>
    <select name="classification_id" id="classification_id">
        <option value="" disabled <%= (!locals.classification_id) ? 'selected' : '' %>>Choose Classification</option>
        <% classificationSelect.forEach(option => { %>
            <option value="<%= option.value %>" <%= (option.value == locals.classification_id) ? 'selected' : '' %>>
                <%= option.label %>
            </option>
        <% }) %>
    </select>
    <table id="inventoryDisplay"></table>
</div>
<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="../../js/inventory.js"></script>